<%= form_with(model: @meal, local: true) do |f| %>
  <div class="field">
  <%= f.label :days %>
  <%= f.collection_select :days, [['Sunday'], ['Monday'], ['Tuesday'], ['Wednesday'], ['Thursday'], ['Friday'], ['Saturday']], required: true, placeholder: "Pick a day of the week" %>
  </div>

  <div class="field">
  <%= f.label :meals %>
  <%= f.collection_select :name, [['Breakfast'], ['Second Breakfast'], ['Elevenses'], ['Luncheon'], ['Afternoon Tea'], ['Dinner'], ['Supper']], required: true, placeholder: "Select Meal" %>
  <%= f.submit 'Update Your Meal Plan' %>
  </div>

  <% end %>